 @model GymApplication.ViewModels.AddUserForm
@{
    ViewBag.Title = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    @using (Html.BeginForm("Save", "Users"))
    {
    <h3 class="text-dark mb-4">User</h3>
    <div class="row mb-3">
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-body text-center shadow">
                    <img class="rounded-circle mb-3 mt-4" src="~/assets/img/dogs/image2.jpeg" width="160" height="160">
                    <div class="mb-3"><button class="btn btn-primary btn-sm" type="button">Change Photo</button></div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col">
                    <div class="card shadow mb-3">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold">User Settings</p>
                        </div>
                        <div class="card-body">
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <strong>@Html.LabelFor(u => u.User.FirstName, new { style = "width: 80.7875px;height: 24px;margin: 0px 0px 8px;padding: 0px;" })</strong>
                                             @Html.TextBoxFor(u => u.User.FirstName, new { @class = "form-control" })
                                    </div>
                                        </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <strong>@Html.LabelFor(u => u.User.LastName)</strong>
                                            @Html.TextBoxFor(u => u.User.LastName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <strong>@Html.LabelFor(u => u.User.EmailAddress)</strong>
                                            @Html.TextBoxFor(u => u.User.EmailAddress, new { @class = "form-control", type = "email" })
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <strong>@Html.LabelFor(u => u.User.DateOfBirth)</strong>
                                            @Html.TextBoxFor(u => u.User.DateOfBirth, new { @class = "form-control", type = "date", style = "height: 38px; padding: 6px 12px; font-size: 16px" })

                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                    <div class="card shadow" style="margin: 0px 0px 16px;">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold">Contact Settings</p>
                        </div>
                        <div class="card-body">

                                <div class="form-group">
                                    <strong>@Html.LabelFor(u => u.User.Address)</strong>
                                    @Html.TextBoxFor(u => u.User.Address, new { @class = "form-control" })
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <strong>@Html.LabelFor(u => u.User.PhoneNumber)</strong>
                                            @Html.TextBoxFor(u => u.User.PhoneNumber, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <strong>@Html.LabelFor(u => u.User.EmergencyNumber)</strong>
                                            @Html.TextBoxFor(u => u.User.EmergencyNumber, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                    </div>
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold">Types</p>
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <strong>@Html.LabelFor(u => u.User.RegistrationDate)</strong>
                                @Html.TextBoxFor(u => u.User.RegistrationDate, new { @class = "form-control", type = "date", style = "height: 38px; padding: 6px 12px; font-size: 16px" })

                            </div>

                                <div class="form-group">
                                    <strong>@Html.LabelFor(u => u.User.RoleId)</strong>
                                    @Html.DropDownListFor(u => u.User.RoleId, new SelectList(Model.Roles, "Id", "RoleName"), "Select User Type", new { @class = "form-control" })

                                </div>
                                <div class="form-group">
                                    <strong>@Html.LabelFor(u => u.User.MembershipTypeId)</strong>
                                    @Html.DropDownListFor(u => u.User.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MembershipName"), "Select Memebrship Type", new { @class = "form-control" })
                                </div>
                                <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">Save&nbsp;Settings</button></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(u => u.User.Id)
    }
</div>



  
