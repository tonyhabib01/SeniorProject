@model GymApplication.Models.User
@{
    ViewBag.Title = "Add Diet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h3 class="text-dark mb-1">Add Diet</h3>
    <div class="card shadow mb-5">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    @using (Html.BeginForm("Save", "Diet"))
                    {
                        <div class="form-group">
                            @Html.TextAreaFor(d => d.DietPlan.Body, new { @class = "form-control", @rows = 30 })
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Add Diet</button>
                        </div>
                        @Html.HiddenFor(u=>u.Id)
                    }
                </div>
            </div>
        </div>
    </div>
</div>
